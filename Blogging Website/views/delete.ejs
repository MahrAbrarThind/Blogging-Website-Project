<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete</title>
    <style>
        body {
            width: 100%;
            font-family: Arial, sans-serif;
        }

        .form {
            width: 40%;
            margin: auto;
            /* background-color: rebeccapurple; */
            margin-top: 30px;
            display: flex;
            align-items: center;
            gap: 15px;
            flex-direction: column;
        }

        input {
            padding: 8px;
            /* width: 500px; */
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
            width: 80%;
        }

        h1 {
            margin-bottom: 20px;
            font-size: 24px;
        }

        button {
            padding: 10px 20px;
            /* width: 150px; */
            width: 30%;
            color: white;
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            border: none;
            border-radius: 25px;
            font-size: 18px;
            font-weight: bold;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        button:hover {
            background: linear-gradient(45deg, #2575fc, #6a11cb);
            color: white;
            cursor: pointer;
            transform: translateY(-3px);
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        }

        @media (max-width:700px){
            
            button{
                width: 40%;
                font-size: 13px;
            }
        }
        @media (max-width:650px){
            input{
                width: 88%;
            }
            h1{
                font-size: 20px;
            }

        }

    </style>
</head>

<body chekFlag="<%= JSON.stringify(flag) %>">

    <%- include('header') %>

    <form action="/delete" method="post" class="form">
        <h1>Delete By Title</h1>
        <input type="text" id="titleInput" name="title" placeholder="Enter The Title">
        <button onclick="check(event)" type="submit">Delete</button>
    </form>

    <%- include('footer') %>

    <script>
        function check(event) {
            let input = document.getElementById('titleInput');
            if (input.value === "") {
                alert("It Seems That The Input Field Is Empty");
                event.preventDefault();
            }
        }

        var flag = JSON.parse(document.body.getAttribute('chekFlag'));

        if (flag === false) {
            alert("Sorry, Blog Not Found");
        }
    </script>
</body>

</html>
