<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Navbar</title>
    <style>
        .navbar {
            background-color: mediumvioletred;
            display: flex;
            color: white;
            padding: 13px;
            justify-content: space-between;
            align-items: center;
        }

        .mainHeading {
            margin-left: 30px;
        }

        .second {
            display: flex;
            gap: 17px;
            margin-right: 32px;
            gap: 27px;
        }

        .anchor {
            text-decoration: none;
            color: white;
            font-size: 23px;
        }

        .menu-icon {
            display: none;
            flex-direction: column;
            cursor: pointer;
            margin-right: 30px;
        }

        .menu-icon div {
            width: 25px;
            height: 3px;
            background-color: white;
            margin: 4px;
        }

        @media (max-width: 1100px) {
            .second {
                display: none;
                flex-direction: column;
                width: 100%;
                background-color: mediumvioletred;
                position: absolute;
                top: 56px;
                left: 0;
                padding: 20px;
            }

            .second.show {
                display: flex;
            }

            .menu-icon {
                display: flex;
            }

            .mainHeading {
                margin-left: 10px;
            }
        }

        @media (max-width:550px) {
            .mainHeading {
                font-size: 20px;
            }
        }
    </style>
</head>

<body>
    <div class="navbar">
        <div class="first">
            <h1 class="mainHeading">Read And Create Your Blog</h1>
        </div>
        <div class="menu-icon" onclick="toggleMenu()">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <div class="second">
            <a class="anchor" href="/home">Home</a>
            <a class="anchor" href="/about">About</a>
            <a class="anchor" href="/compose">Compose</a>
            <a class="anchor" href="/blogs">Blogs</a>
            <a class="anchor" href="/find">Find</a>
            <a class="anchor" href="/delete">Delete</a>
        </div>
    </div>

    <script>
        function toggleMenu() {
            const menu = document.querySelector('.second');
            menu.classList.toggle('show');
        }
    </script>
</body>

</html>